# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Worker Configuration
REDIS_STREAM_KEY=terminal-agent:commands
REDIS_CONSUMER_GROUP=terminal-worker-group
REDIS_CONSUMER_NAME=worker-1

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terminal_agent

# S3/MinIO
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_ENDPOINT=http://localhost:9000
S3_BUCKET=terminal-images

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Playwright (if used)
PLAYWRIGHT_CHROMIUM_ARGS=--disable-dev-shm-usage --disable-software-rasterizer --disable-gpu --no-sandbox
